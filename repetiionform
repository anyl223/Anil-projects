<body>
<lable>Enter Anil Number </lable>
<input type = "number" onchange = "fun(event);">
<div id="data"></div>


</body>
<script>
function fun(e){
	var a = e.target.value;
    document.getElementById("data").innerHTML= ""
    for(let b=0; b<a; b++)
    {
    	document.getElementById("data").innerHTML += `<form>
        <lable>Enter the name</lable>
        <input type = "text">
        <lable>Enter the Age</lable>
        <input type = "number">
        <input type= "submit" name="submit" value="submit">
        `
    }
}
</script>
